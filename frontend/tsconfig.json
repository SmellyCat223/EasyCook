{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app",
    "**/*.ts",
    "**/*.tsx",
    "frontend/easycook/expo-env.d.ts",
    "src/**/*",
    "expo-secure-store.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "lib"
  ],
  "extends": "expo/tsconfig.base"
}